  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "addLabels": ["docker"]
    },
    {
      "matchCategories": ["ci"],
      "addLabels": ["ci"]
    }
  ]
}
